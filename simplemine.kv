<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20
        Label:
            text: "Welcome to Minesweeper!!"
            font_size: 30
            size_hint_y: None
            height: self.texture_size[1] * 2
        Image:
            source: "images/bomb.png"
            size_hint: None, None
            height: self.texture_size[1] * 1/2
            width: self.texture_size[0] * 1/2
            pos_hint: {"center_x": .5, "center_y": .5}
        Button:
            text: "5x5"
            on_press: self.parent.parent.select_size(5, 5, 5)
        Button:
            text: "8x8"
            on_press: self.parent.parent.select_size(8, 8, 5)
        Button:
            text: "16x16"
            on_press: self.parent.parent.select_size(16, 16, 20)
        Button:
            text: "32x32"
            on_press: self.parent.parent.select_size(32, 32, 100)
        Button:
            text: "Enter the game"
            on_press: self.parent.parent.manager.current = "play_game"
            background_color: (0, 1, 0, 1)
            size_hint_y: None
            height: 50
            font_size: 20
        BoxLayout:
            size_hint_y: None
            height: 20


<PlayGameScreen>:
    BoxLayout:
        BoxLayout:
            id: mine_layout
            size_hint: 

        BoxLayout:
            Label:
                text: "Count"
            Label:
                id: score_number
                text: "0"
            Button:
                text: "Hello"



<BombPopup>:
    auto_dismiss: False
    title: "KaBoom!!"
    BoxLayout:
        orientation:"vertical"
        Label:
            text: "Your turn, gone!"
        Button:
            text: 'Close me!'
            on_press: root.dismiss()
